<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img class="img-random" src="{{image}}" alt="Image random">
        </div>
        <div class="col-md-6">
            <div>
                <h2 class="card-title">{{title}}</h2>
                <h3 class="card-text">{{director}}</h3>
                <h4>Stars</h4>
                <ul>
                    {{#each stars}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p>{{description}}</p>
                {{#each showtimes}}
                {{this}} |
                {{/each}}
            </div>
        </div>
    </div>
    <hr>
    <a href="/movies" class="btn btn-dark">Volver al listado</a>


</div>